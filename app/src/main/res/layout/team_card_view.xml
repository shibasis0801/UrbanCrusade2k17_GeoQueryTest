<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_card_view"
    android:padding="@dimen/activity_horizontal_margin"
    app:cardBackgroundColor="#260505"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="@dimen/activity_horizontal_margin"
                android:id="@+id/team_icon_image_view"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="@dimen/activity_horizontal_margin"
                android:id="@+id/team_name_text_view"
                android:layout_toRightOf="@+id/team_icon_image_view"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textAlignment="center"
                android:elegantTextHeight="true"
                android:textColor="@color/authui_inputTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="@dimen/activity_smaller_margin"
                android:textAlignment="center"
                android:elegantTextHeight="true"
                android:padding="@dimen/activity_smaller_margin"
                android:layout_toRightOf="@id/team_icon_image_view"
                android:layout_below="@+id/team_name_text_view"
                android:id="@+id/team_power_text_view"
                android:text="@string/app_name"
                android:textColor="@color/authui_inputTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>